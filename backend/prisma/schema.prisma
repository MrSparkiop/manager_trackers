generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  password            String
  firstName           String
  lastName            String
  avatar              String?
  role                Role      @default(USER)
  isSuspended         Boolean   @default(false)
  refreshToken        String?
  resetPasswordToken  String?
  resetPasswordExpiry DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  tags                Tag[]
  projects            Project[]
  tasks               Task[]
  timeEntries         TimeEntry[]
  calendarEvents      CalendarEvent[]

  @@map("users")
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  color       String        @default("#6366f1")
  status      ProjectStatus @default(ACTIVE)
  deadline    DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]

  @@index([userId])                    // fetch all projects by user
  @@index([userId, status])            // filter projects by user + status
  @@map("projects")
}

model Task {
  id            String      @id @default(cuid())
  title         String
  description   String?
  status        TaskStatus  @default(TODO)
  priority      Priority    @default(MEDIUM)
  dueDate       DateTime?
  estimatedTime Int?
  completedAt   DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId     String?
  project       Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)
  parentId      String?
  parent        Task?       @relation("SubTasks", fields: [parentId], references: [id])
  subtasks      Task[]      @relation("SubTasks")
  timeEntries   TimeEntry[]
  calendarEvents CalendarEvent[]
  tags          Tag[]

  @@index([userId])                    // fetch all tasks by user
  @@index([projectId])                 // fetch all tasks by project
  @@index([parentId])                  // fetch subtasks by parent
  @@index([userId, status])            // filter tasks by user + status
  @@index([userId, priority])          // filter tasks by user + priority
  @@index([userId, dueDate])           // fetch overdue/today tasks by user
  @@map("tasks")
}

model TimeEntry {
  id          String    @id @default(cuid())
  description String?
  startTime   DateTime
  endTime     DateTime?
  duration    Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskId      String?
  task        Task?     @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId])                    // fetch all entries by user
  @@index([taskId])                    // fetch entries by task
  @@index([userId, startTime])         // time summary queries (today, this week)
  @@map("time_entries")
}

model CalendarEvent {
  id          String    @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  allDay      Boolean   @default(false)
  color       String    @default("#6366f1")
  recurrence  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskId      String?
  task        Task?     @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId])                    // fetch all events by user
  @@index([taskId])                    // fetch events by task
  @@index([userId, startTime])         // fetch events by month/date range
  @@map("calendar_events")
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#6366f1")
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@index([userId])
  @@map("tags")
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
  ON_HOLD
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Role {
  USER
  ADMIN
}
